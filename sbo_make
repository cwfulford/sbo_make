app=`basename $sbo .tar.gz
tar xvf $sbo
chown fulford $app 
cd $app 
. ./$app.info
wget $DOWNLOAD
pkg=`./$app.SlackBuild|awk '{print $3}'`
pkg_chk=`expr "$pkg" : '.tgz'
if [ "$pkf_chk" -eq 4 ];then 
	mv /tmp/$pkg .
	installpkg /tmp/$pkg;then
else
	echo "$cmd: Failed, package not created">&2
	cd ..
	exit 1 
fi
cd ..
	
