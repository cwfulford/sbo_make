wget $DOWNLOAD
pkg=`sudo ./$app.SlackBuild|awk '{print $3}'`
pkg_chk=`expr "$pkg" : '.*SBo\.tgz'`
if [ $pkf_chk -gt 7 ];then 
	sudo mv /tmp/$pkg .
	sudo installpkg /tmp/$pkg
else
	echo "$cmd: Failed, package not created">&2
	cd ..
	exit 1 
fi
cd ..
	
